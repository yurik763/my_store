<h1>Items</h1>

<% if @items.empty? %>
	<b>No items in store</b>
<% else %>
<table>
	<tr>
		<th>item id</th>
		<th>Name</th>
		<th>Price</th>
		<th>Weight</th>
		<th>Image</th>
		<th></th>
	</tr>

	<% @items.each do |i| %>

		<tr>
			<td><%= i.id %></td>
			<td><%= link_to i.name, item_path(i) %></td>
			<td><%= i.price %> euro.</td>
			<td><%= i.weight %> kg.</td>
			<td><%= i.image %> </td>
			<td><%= button_to "Delete", i, method: :delete, data: { confirm: 'Действительно удалить?'}%></td>


	<% end %>

</table>

<% end %>